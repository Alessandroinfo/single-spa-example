<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>Single-SPA Example</title>

    <!--  Angular libs -->
    <script src='https://unpkg.com/core-js-bundle@3.1.4/minified.js'></script>
    <script src="https://unpkg.com/zone.js@0.10.3/dist/zone.js"></script>


    <meta name="importmap-type" content="systemjs-importmap"/>
    <!-- MFE loading for prod or local -->
    <% if (isLocal) { %>
        <script type="systemjs-importmap">
    {
      "imports": {
        "single-spa": "https://cdn.jsdelivr.net/npm/single-spa@5.9.1/lib/system/single-spa.min.js",
        "@company/root-config": "http://localhost:9000/company-root-config.js",
        "navbar": "//localhost:4200/main.js",
        "section": "//localhost:4100/main.js"
      }
    }



        </script>
    <% } %>

    <!-- Module formats imports -->
    <% if (isLocal) { %>
        <script src="https://cdn.jsdelivr.net/npm/systemjs@6.14.1/dist/system.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/systemjs@6.14.1/dist/extras/amd.js"></script>
    <% } else { %>
        <script src="https://cdn.jsdelivr.net/npm/systemjs@6.14.1/dist/system.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/systemjs@6.14.1/dist/extras/amd.min.js"></script>
    <% } %>
    <script src="https://cdn.jsdelivr.net/npm/import-map-overrides@2.2.0/dist/import-map-overrides.js"></script>

</head>
<body>
<script>
    System.import('@company/root-config');
</script>
<import-map-overrides-full show-when-local-storage="devtools" dev-libs></import-map-overrides-full>

<div class="root">
    <div class="nav">
        <div id="single-spa-application:navbar"></div>
    </div>
    <div class="section">
        <div id="single-spa-application:section"></div>
    </div>
</div>
</body>
</html>
